{% block head %}
    {% include 'home/head.html.twig' %}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = google.visualization.arrayToDataTable([
                ['timestamp', 'download_bytes'],
                {% for rows in downLoadData %}
                ['{{ rows.timestamp }}', {{ rows.download_bytes }}],
                {% endfor %}
            ]);

            var options = {
                title: 'Download Bytes per Month',
                curveType: 'function',
                legend: { position: 'bottom' }
            };

            var chart = new google.visualization.LineChart(document.getElementById('sales_chart'));

            chart.draw(data, options);
        }
    </script>
{% endblock %}

{% block body %}
    <h2 class="bg-red-600 text-center">Charts are currently under development</h2>
    <section id="sales_chart" style="width: 100%; height: 500px;"></section>
{% endblock %}
